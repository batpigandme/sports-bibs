journal = {The Annals of Applied Statistics},
keywords = {Basketball,Bayesian hierarchical models,NBA,basketball,bayesian hierarchical models,hidden Markov models,hidden markov models,nonnegative matrix factor- ization,nonnegative matrix factorization,spatial analysis,sports},
number = {1},
pages = {0--31},
title = {{Characterizing the Spatial Structure of Defensive Skill in Professional Basketball}},
